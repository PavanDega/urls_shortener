<h1>Shorten Your URL</h1>

<%= form_with model: @url, url: urls_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :original_url, "Enter a long URL:" %><br>
    <%= f.text_field :original_url, placeholder: "https://example.com" %>
  </div>
  <div>
    <%= f.submit "Shorten URL" %>
  </div>
<% end %>
